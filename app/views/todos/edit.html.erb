<div class="page-header">
  <%= link_to @list, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <h1>Update todo</h1>
</div>

<%= form_for([@list, @todo], method: :put, :html => { :class => "form-horizontal" }) do |f| %>

  <div class="row">
    <div class="col-sm-4">
      <%= f.text_field :name, :class => "form-control", autofocus: true, placeholder: 'New Item' %>
      <%= f.hidden_field :done, value: false, :class => "form-control" %>
    </div>

    <div class="col-sm-6">
      <%= f.label :deadline, class: 'control-label'  %>
      <%= f.time_select :deadline, ampm: true, minute_step: 5, include_blank: true, class: 'form-control' %>
    </div>

    <div class="col-sm-2">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <span class="glyphicon glyphicon-plus-sign"></span> Update
      <% end %>
    </div>
  </div>

<% end %>


