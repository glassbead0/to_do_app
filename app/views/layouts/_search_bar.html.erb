<% if current_user && @list && !@search_bar %>
  <ul class="nav navbar-nav">
    <li>
      <%= link_to 'My Todo Lists', lists_path %>
    </li>
  </ul>
  <%= search_form_for @q, url: list_todos_path(@list), class: 'navbar-form navbar-left', role: 'search' do |f| %>
    <div class="form-group">
      <%= f.search_field :name_cont, type: 'text', class: 'form-control', placeholder: 'Search my todos' %>
    </div>
    <%= f.submit 'Go', class: 'btn btn-warning' %>
    <%= link_to 'Back to List', @list, class: 'btn btn-warning' %>
  <% end %>
<% end %>
